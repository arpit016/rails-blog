<%= render 'shared/errors', obj: @article %>


<div class="row forms">
  <div class="col-xs-12 col-md-12">
    <%= form_for @article do |f| %>
    <div class="row">
      <div class="form-group col-md-offset-2 col-md-8">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control", placeholder: "Title for new Article", autofocus: true %>
      </div>
      <div class="col-md-6">
      </div>
    </div>
    <div class="row">
      <div class= "form-group col-md-offset-2 col-md-8">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control", placeholder: "Description of article",rows: "10" %>
      </div>
    </div>
      
      <div class="form-group">
        <div class="col-sm-offset-5 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    
    <% end %>
    <div class="col-md-offset-2">
    <p>
    <h4><%= link_to "List articles", articles_path %></h4>
    </p>
    </div>
  
  </div>
</div>