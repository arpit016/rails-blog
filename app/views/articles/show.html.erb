<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 align="center"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
</div>

    <div class="col-md-offset-2">
      <div class="col-md-4">
        <h4><%= link_to "List articles", articles_path, class: "btn btn-success btn-lg" %></h4>
      </div>
      <div class="col-md-4">
        <h4><%= link_to "Edit article", edit_article_path(@article), class: "btn btn-primary btn-lg" %></h4>
      </div>
      <div class="col-md-4">  
        <h4><%= link_to "Delete article",article_path(@article), method: :delete, data: {confirm: "Are you Sure?"}, class: "btn btn-danger btn-lg" %></h4>
      </div>
    </div>
  </div>
</div>